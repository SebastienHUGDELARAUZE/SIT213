<!--
    Ant project for SIT213 - Version livrable
-->
<project name="SIT213-livrable" basedir="." default="runApp">

    <!-- region=================================        Properties        ================================= -->

    <property name="source.main.dir" value="src"/>
    <property name="source.test.dir" value="test"/>
    <property name="source.validation.dir" value="validation"/>
    <property name="source.build.dir" value="bin"/>
    <property name="source.build.main.dir" value="${source.build.dir}/main"/>
    <property name="source.build.test.dir" value="${source.build.dir}/test"/>

    <property name="lib.dir" value="lib"/>

    <property name="docs.dir" value="docs"/>

    <!-- endregion -->

    <!-- region=================================        Classpath         ================================= -->

    <path id="classpath.main">
        <pathelement location="${basedir}/${lib.dir}/commons-cli-1.4.jar"/>
        <pathelement location="${source.build.main.dir}"/>
    </path>

    <path id="classpath.test">
        <pathelement location="${basedir}/${lib.dir}/junit-4.12.jar"/>
        <pathelement location="${basedir}/${lib.dir}/hamcrest-core-1.3.jar"/>
        <pathelement location="${source.build.test.dir}"/>
    </path>

    <!-- endregion -->

    <!-- =================================        Targets           ================================= -->

    <!-- region=====     target: cleanAll     ===== -->
    <target name="cleanAll" description="--> Clean generated files">
        <delete includeEmptyDirs="true" quiet="true">
            <fileset dir="${source.build.dir}"/>
            <fileset dir="${docs.dir}"/>
        </delete>
    </target>
    <!-- endregion -->

    <!-- region =====     target: prepareAll     ===== -->
    <target name="prepareAll" depends="prepareBuild, prepareDocumentation"
            description="--> Initialize project structure"/>

        <!-- =====     target: prepareBuild     ===== -->
        <target name="prepareBuild" description="--+--> Initialize build structure">
            <mkdir dir="${source.build.dir}"/>
        </target>

        <!-- =====     target: prepareBuild.extended     ===== -->
        <target name="prepareBuild.extended" depends="prepareBuild"
                description="--+--+--> Initialize main &amp; test build structure">
            <mkdir dir="${source.build.main.dir}"/>
            <mkdir dir="${source.build.test.dir}"/>
        </target>

        <!-- =====     target: prepareDocs     ===== -->
        <target name="prepareDocumentation" description="--+--> Initialize documentation structure">
            <mkdir dir="${docs.dir}"/>
        </target>

    <!-- endregion -->

    <!-- region=====     target: compileAll     ===== -->
    <target name="compileAll" depends="compileApp, compileTest"
            description="--> Compile app &amp; test source">
    </target>

        <!-- =====     target: compileApp     ===== -->
        <target name="compileApp" depends="prepareBuild.extended"
                description="--+--> Compile app source">
            <echo>=====Compiling ${source.main.dir} files ...=====</echo>
            <javac debug="on" srcdir="${source.main.dir}" destdir="${source.build.main.dir}" includeAntRuntime="false">
                <classpath refid="classpath.main"/>
            </javac>
        </target>

        <!-- =====     target: compileTest     ===== -->
        <target name="compileTest" depends="compileApp"
                description="--> Compile implemented tests">
            <echo>=====Compiling ${source.test.dir} files...=====</echo>
            <javac srcdir="${source.test.dir}" destdir="${source.build.test.dir}" includeantruntime="false">
                <classpath refid="classpath.main"/>
                <classpath refid="classpath.test"/>
            </javac>
            <echo>=====Compiling ${source.validation.dir} files...=====</echo>
            <javac srcdir="${source.validation.dir}" destdir="${source.build.test.dir}" includeantruntime="false">
                <classpath refid="classpath.main"/>
                <classpath refid="classpath.test"/>
            </javac>
        </target>
    <!-- endregion -->

    <!-- region=====     target: runApp     ===== -->
    <target name="runApp" depends="compileApp"
            description="--> Run app">
        <echo>=====Run Simulateur -h=====</echo>
        <java dir="${source.build.main.dir}" classname="Simulateur" fork="true">
            <classpath refid="classpath.main"/>
            <arg value="-h"/>
        </java>
    </target>
    <!-- endregion -->

    <!-- region=====     target: runUnitTest     ===== -->
    <target name="runUnitTest" depends="compileTest"
            description="--> Run unit test">
        <echo>=====Run tests=====</echo>
        <junit printsummary="on" haltonfailure="yes" fork="true">
            <classpath>
                <path refid="classpath.main"/>
                <path refid="classpath.test"/>
            </classpath>
            <formatter type="brief" usefile="false" />
            <batchtest>
                <fileset dir="${source.test.dir}" includes="SimulateurTest.java" />
            </batchtest>
        </junit>
    </target>
    <!-- endregion -->

    <!-- region=====     target: runValidationApp     ===== -->
    <target name="runValidationTest" depends="compileTest"
            description="--> Run validation test">
        <echo>=====Run validation tests=====</echo>
        <echo>==========>Start RZ validation</echo>
        <java dir="${source.build.test.dir}" classname="ValidationTEBvsSNR" fork="true">
            <classpath refid="classpath.main"/>
            <classpath refid="classpath.test"/>
            <arg value="-mess"/><arg value="5000"/><arg value="-form"/><arg value="RZ"/>
        </java>
        <echo>==========>Start NRZ validation</echo>
        <java dir="${source.build.test.dir}" classname="ValidationTEBvsSNR" fork="true">
            <classpath refid="classpath.main"/>
            <classpath refid="classpath.test"/>
            <arg value="-mess"/><arg value="5000"/><arg value="-form"/><arg value="NRZ"/>
        </java>
        <echo>==========>Start NRZT validation</echo>
        <java dir="${source.build.test.dir}" classname="ValidationTEBvsSNR" fork="true">
            <classpath refid="classpath.main"/>
            <classpath refid="classpath.test"/>
            <arg value="-mess"/><arg value="5000"/><arg value="-form"/><arg value="NRZT"/>
        </java>
        <echo>==========>Start Gaussian noise validation</echo>
        <java dir="${source.build.main.dir}" classname="bruit.BruitGaussien" fork="true">
            <classpath refid="classpath.main"/>
        </java>
    </target>
    <!-- endregion -->

    <!-- =====     target: generateDocumentation     ===== -->
    <target name="generateDocumentation" depends="prepareDocumentation"
            description="--+--> Generate java documentation">
        <javadoc sourcepath="${source.main.dir}" destdir="${docs.dir}" access="package"
            encoding="utf8" docencoding="utf8" charset="utf8"/>
    </target>

</project>